@using Microsoft.AspNet.Identity
@using Lazybones.Models
@model Lazybones.Models.AspNetUser

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
        <h3>Account Profile</h3>

        @Html.HiddenFor(model => model.Id)
    <div>Badge count: @Html.DisplayFor(model => model.Badge_Count) </div>
        <div class="row">
            <div class="col-sm-8">
                <div class="row">
                    <div class="col-sm-6">
                        First Name <br />
                        @Html.EditorFor(model => model.First_Name, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="col-sm-6">
                        Last Name <br />
                        @Html.EditorFor(model => model.Last_Name, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        Mobile Phone Number <br />
                        @Html.EditorFor(model => model.Mobile_Phone, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="col-sm-8">
                        MEmail <br />
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        Street Address <br />
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        City <br />
                        @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="col-sm-2">
                        State <br />
                        @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="col-sm-4">
                        Zip Code <br />
                        @Html.EditorFor(model => model.Zip, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <h4>I am a:</h4>
                Go-Getter &nbsp;
                @Html.EditorFor(model => model.Go_Getter)
                Gig Poster &nbsp;
                @Html.EditorFor(model => model.Gig_Poster)
                <br /> <hr />
                <div style="text-align: center;"><h4>Preferred Contact Method:</h4></div>
                <table>
                    <tr>
                        <th>
                            Call
                        </th>
                        <th>
                            Text
                        </th>
                        <th>
                            Email
                        </th>
                    </tr>
                    <tr>
                        <td>
                            [Html placeholder]

                        </td>
                        <td>
                            [Html placeholder]
                        </td>
                        <td>
                            [Html placeholder]
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    <div class="row">
        <br/>
        <div class="col-sm-offset-10 col-sm-12">
            <input type="submit" value="Save" class="btn btn-lg"/>
        </div>
    </div>

}

