@using Lazybones.Models
@model Lazybones.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <h3>All fields are required</h3>
    <div class="container-fluid, form-horizontal">
        <!-- email & pass -->
        <div class="col-sm-9">
            <div class="row">
                First Name <br />
                @Html.EditorFor(m => m.First_Name, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="row">
                Last Name <br />
                @Html.EditorFor(m => m.Last_Name, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="row">
                Email <br />
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div class="row">
                Password <br />
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
            <div class="row">
                Confirm Password <br />
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
            <div class="row">
                Home Address
                <br />
                @Html.EditorFor(m => m.Address, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="row">
                City <br />
                @Html.EditorFor(m => m.City, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="row">
                State <br />
                @Html.EditorFor(m => m.State, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="row">
                Zip Code <br />
                @Html.EditorFor(m => m.Zip, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="row">
                Mobile Phone <br />
                @Html.EditorFor(m => m.Mobile_Phone, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <br/>
        </div>
        <div class="col-sm-3">
            <div style="float: right;"> <br/>
                <strong>I am a</strong> <br />
                Gig Poster &nbsp;
                @Html.CheckBoxFor(m => m.Gig_Poster)
                <br />
                Go-Getter &nbsp;
                @Html.CheckBoxFor(m => m.Go_Getter)
                <hr />
                <strong>Preferred Contact Method:</strong> <br />
                Call &nbsp; @Html.CheckBoxFor(m => m.ByCall) <br />
                Text &nbsp;@Html.CheckBoxFor(m => m.ByText)<br />
                Email &nbsp;@Html.CheckBoxFor(m => m.ByEmail)<br />
            </div>
        </div>
    </div> 
    <div class="row">
        <div class="form-group">
            <br />
            <div class="col-sm-offset-9 col-sm-10">
                <input type="submit" class="btn btn-default" value="Register" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
