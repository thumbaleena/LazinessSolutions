@model Lazybones.Models.User

@{
    ViewBag.Title = "ModifyProfile";
}

<h2>ModifyProfile</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Update Profile</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.EditorFor(model => model.First_Name)

        @Html.EditorFor(model => model.Last_Name)

        @Html.EditorFor(model => model.Email)

        @Html.EditorFor(model => model.Mobile_Phone)

        @Html.EditorFor(model => model.Address)

        @Html.EditorFor(model => model.City)

        @Html.EditorFor(model => model.State)

        @Html.EditorFor(model => model.Zip)

        @Html.EditorFor(model => model.Preferred_Contact_Method)

        @Html.EditorFor(model => model.Gig_Poster)

        @Html.EditorFor(model => model.Go_Getter)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
