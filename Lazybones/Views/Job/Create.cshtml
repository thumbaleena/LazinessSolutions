@model Lazybones.Models.Job

@*@{
        ViewBag.Title = "Create Job Test";
    }*@

<h2>Post a New Gig</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6" style="padding-left: 85px; padding-right: 50px;">
                <div class="row"><table width="550px">
                        <tr>
                            <th>
                                Title:
                            </th>
                            <td>
                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", value = "title" } })
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Description:
                            </th>
                            <td>
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Category:
                            </th>
                            <td>
                                @Html.DropDownListFor(model => model.Category, new List<SelectListItem>
                                {
                                    new SelectListItem {Value = "Carryout", Text = "Carryout"},
                                    new SelectListItem {Value = "Auto Maintence", Text = "Auto Maintenance"}, new SelectListItem {Value = "Shopping", Text = "Shopping"}, new SelectListItem {Value = "Sloth", Text = "Sloth"}, new SelectListItem {Value = "Cleaning", Text = "Cleaning"}, new SelectListItem {Value = "Other", Text = "Other"}
                                })
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Flat Rate Pay:
                            </th>
                            <td>
                                $ @Html.EditorFor(model => model.Pay, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="row">
                    <table width="550px">
                        <tr>
                            <th>
                                Starts:
                            </th>
                            <th>
                                Expires:
                            </th>
                        </tr>
                        <tr>
                            <td>
                                @Html.EditorFor(model => model.Start_Time_Date, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                            </td>
                            <td>
                                @Html.EditorFor(model => model.Expirey_Time_Date, new { htmlAttributes = new { @class = "form-control", type = "date"} })
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="col-sm-6" style="padding-left: 85px;">
                <div class="row">
                    <table width="440px">
                        <tr>
                            <th>Address:</th>
                            <td>
                                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                            </td>

                        </tr>
                        <tr>
                            <th>
                                City:
                            </th>
                            <td>
                                @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>
                        <tr>
                            <th>
                                State:
                            </th>
                            <td>
                                @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>
                        <tr>
                            <th>Zip Code:</th>
                            <td>
                                @Html.EditorFor(model => model.Zip, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>
                        <tr>
                            <th>Phone:</th>
                            <td>@Html.EditorFor(model => model.Poster_Phone, new { htmlAttributes = new { @class = "form-control" } })</td>
                        </tr>
                    </table>
                </div>
                <div class="row" style="text-align: center;">
                    <strong>Preferred contact method:</strong>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <div class="row">
                            Call
                        </div>
                        <div class="row">@Html.EditorFor(model => model.Contact_By_Phone)</div>
                    </div>
                    <div class="col-sm-4">
                        <div class="row">
                            Text
                        </div>
                        <div class="row">@Html.EditorFor(model => model.Contact_By_Text)</div>
                    </div>
                    <div class="col-sm-4">
                        <div class="row">
                            Email
                        </div>
                        <div class="row">@Html.EditorFor(model => model.Contact_By_Email)</div>
                    </div>
                </div><br/>
            </div>
        </div>
    </div>
    <br/>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}
<br/>
<div>
    @Html.ActionLink("Back to List", "Dashboard", "Home")
</div>
<hr />
<footer>
    <p>&copy; @DateTime.Now.Year Site powered by baby sloths</p>
</footer>