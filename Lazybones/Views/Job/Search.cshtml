@using Lazybones.Models

@model IEnumerable<Lazybones.Models.Job>

@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

    <form action="/Job/SearchFilter">
        <select name="Category">
            <option value="Category">Category</option>
            <option value="Sloth Giving">Sloth Giving</option>
            <option value="Dry Cleaning">Dry Cleaning</option>
            <option value="Delivery">Delivery</option>
            <option value="Test">Test</option>
            <option value="Other">Other</option>
        </select>
        <input type="text" value="City" />
        <select name="Pay">
            <option value="none">Pay</option>
            <option value="Under">Under</option>
            <option value="Equals">Equals</option>
            <option value="Over">Over</option>
        </select>
        <input type="number" value="Price" placeholder="0"/>
        <input type="submit" value="Search" />
        
    </form>
<table class="table">
    <tr>
        <th>
            Job Title
        </th>
        <th>
            Category
        </th>
        <th>
            Last Day
        </th>
        <th>
            City
        </th>
        <th>
            Pay
        </th>
    </tr>
    
            @foreach (var item in Model)
            {
<tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Expirey_Time_Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pay)
        </td>       
    <td>
        <a href="Details?id=@item.ID.ToString()"> Details</a>
    </td>
    </tr>
}

</table>

