@model Lazybones.Models.Job

@{
    ViewBag.Title = "Edit";
}

<h4>Edit Gig</h4>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <table width="550px">
                    <tr>
                        <th>
                            Title:
                        </th>
                        <td>
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", value = "title" } })
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Description:
                        </th>
                        <td>
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Starts:
                        </th>
                        <td>
                            @Html.EditorFor(model => model.Start_Time_Date, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Category:
                        </th>
                        <td>
                            @Html.EditorFor(model => model.Category, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Flat Rate Pay:
                        </th>
                        <td>
                            $ @Html.EditorFor(model => model.Pay, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Or best offer:
                        </th>
                        <td>
                            @Html.EditorFor(model => model.Best_Bid)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Expires:
                        </th>
                        <td>
                            @Html.EditorFor(model => model.Expirey_Time_Date, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Status:
                        </th>
                        <td>
                            @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Date Completed or Expired:
                        </th>
                        <td>
                            @Html.EditorFor(model => model.Date_Completed, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Payment Status:
                        </th>
                        <td>
                            @Html.EditorFor(model => model.Payment_Status, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Posted By:
                        </th>
                        <td>
                            @Html.EditorFor(model => model.Poster, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                    </tr>
                    <tr>
                        <th>Gig Location</th>
                        <td>Same as home? </td>
                    </tr>
                    <tr>
                        <th>Address:</th>
                        <td>
                            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Gig City:
                        </th>
                        <td>
                            @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Gig State:
                        </th>
                        <td></td>
                    </tr>
                    <tr>
                        <th>Gig Zip Code:</th>
                        <td>
                            @Html.EditorFor(model => model.Zip, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                    </tr>
                    <tr>
                        <th>Assigned To:</th>
                        <td>
                            @Html.EditorFor(model => model.Getter, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                    </tr>
                </table>
                <table>
                    <tr>
                        <td></td>
                        <td>
                            Call
                        </td>
                        <td>
                            Text
                        </td>
                        <td>
                            Email
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Contact Poster Via:
                        </th>
                        <td>
                            @Html.EditorFor(model => model.Contact_By_Phone)
                        </td>
                        <td>
                            @Html.EditorFor(model => model.Contact_By_Text)
                        </td>
                        <td>
                            @Html.EditorFor(model => model.Contact_By_Email)
                        </td>
                    </tr>
                </table>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
